# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.py]
indent_size = 4
trim_trailing_whitespace = true
end_of_line = LF

[*.js]
indent_size = 2

[*.md]
trim_trailing_spaces = false

[COMMIT_EDITMSG]
max_line_length = 0
