* {
  box-sizing: border-box;
}

body {
  margin:0;
  padding: 0;
}

.App {
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  height: 100vh;
  width: 100vw;
}

header{
  background-color: black;
  font-family: arial;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
